{
    "triggers": [
        {
            "on": {
                "state": "success"
            },
            "targetEventName": "celebrate-success"
        },
        {
            "on": {
                "state": "error"
            },
            "targetEventName": "error-sequence"
        }
    ],
    "events": [
        {
            "name": "celebrate-success",
            "modules": [
                {
                    "name": "LedStrip",
                    "push": {
                        "state": "success"
                    }
                },
                {
                    "name": "DashboardVideo",
                    "push": {
                        "youTubeKey": "ZTOIEz7p2KU",
                        "startAt": 20,
                        "duration": 20
                    }
                }
            ]
        },
        {
            "name": "error-sequence",
            "modules": [
                {
                    "name": "LedStrip",
                    "push": {
                        "state": "error"
                    }
                },
                {
                    "name": "PowerUp",
                    "push": {
                        "gpioPort": 13,
                        "time": 5000
                    }
                }
            ]
        }
    ],
    "modules": [
        {
            "name": "DashboardVideo",
            "config": {}
        },
        {
            "name": "LedStrip",
            "config": {
                "gpioPortRed": 10,
                "gpioPortGreen": 11,
                "gpioPortBlue": 12,
                "state": "neutral"
            }
        },
        {
            "name": "PowerUp",
            "config": {}
        },
        {
            "name": "HueLight",
            "config": {
                "hub": "---token---",
                "path": "/api/---token---/lights/5/state"
            }
        }
    ]
}
